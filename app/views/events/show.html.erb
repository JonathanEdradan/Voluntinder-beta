<head> 
	<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
	<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
	<script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
</head>

<body>



<div style='float:left; width: 50%'  class="EventWindow" >

	<p>
		<strong> <%= @event.name %> </strong>		
	</p>

	<div style='width: 100px;'>
		<div id="map" style='width: 400px; height: 200px;'></div>
	</div>

	<script type="text/javascript">
	handler = Gmaps.build('Google');
	handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
	  markers = handler.addMarkers(<%=raw @hash.to_json %>);
	  handler.bounds.extendWith(markers);
	  handler.fitMapToBounds();
	  handler.getMap().setZoom(13)
	});
	</script>
	<br>
	<p>
		<strong>Description:</strong>
		<%= @event.description %>
	</p>

	<p>
		<strong>Date:</strong>
		<%= @event.date %>
	</p>

	<p>
		<strong>Location:</strong> <br>
		<%= @event.address %> <br>
		<%= @event.city + ',' + ' ' + @event.state %> <br>
		<%= @event.zipcode %>
	</p>

	<%= link_to 'X', event_path(id: params[:id].to_i + 1) if Event.exists?(id: params[:id].to_i + 1) %> 
</div>
<div style='float:left; width: 50%' class="profile">

	<h1> <strong><%= @user.email %></strong> </h1>

</div>
</body>