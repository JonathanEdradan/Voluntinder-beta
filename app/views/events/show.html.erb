<style>
.Links {
	font-size: 80px;
}

.EventWindow {
	font-size: 10px;
}

</style>
<head> 


	<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
	<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
	<script src="//code.jquery.com/jquery-1.11.2.min.js"></script>

	<script type="text/javascript">
	var count = 0;
	$(document).ready(
		function(){
       	    $('#Attend').click(function() {
       	    	$.post("/attendances", {attendance:{user_id: <%= current_user.id%>,event_id: <%= @event.id%>}}).done(function(data){
			          $('#atten').append('<li>' + "<%= @event.name %>"  + '<a href="/attendances/' + data.id + '" data-method="delete">Delete</a></li>')
			          $('#Attend').hide()
			          })
       	    })
       	})

	</script>

</head>

<body>
<%= render 'nav' %>


	<div style='float:left; width: 60%'  class="EventWindow" >

		<h1>
			<strong> <%= @event.name %> </strong><br>
		</h1>

		<div style='width: 100px;'>
			<div id="map" style='width: 400px; height: 200px;'></div>
		</div>

		<script type="text/javascript">
		handler = Gmaps.build('Google');
		handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
			markers = handler.addMarkers(<%=raw @hash.to_json %>);
			handler.bounds.extendWith(markers);
			handler.fitMapToBounds();
			handler.getMap().setZoom(13)
		});
		</script>
		<br>
		<p>
			<strong>Description:</strong>
			<%= @event.description %>
		</p>

		<p>
			<strong>Date:</strong>
			<%= @event.date %>
		</p>

		<p>
			<strong>Location:</strong> <br>
			<%= @event.address %> <br>
			<%= @event.city + ',' + ' ' + @event.state %> <br>
			<%= @event.zipcode %>
		</p>

		<div class="Links">
		<%= link_to 'X', event_path(id: params[:id].to_i + 1) if Event.exists?(id: params[:id].to_i + 1) %> 
		</div>

		<div id='Attend'>
			<a  id="signin" class="btn btn-warning btn-lg" role="button">Yes</a> 
		</div>


			<span class="Links">
		<%= link_to image_tag("http://www.clker.com/cliparts/Q/A/W/c/p/q/small-red-x-mark-th.png"), event_path(id: params[:id].to_i + 1) if Event.exists?(id: params[:id].to_i + 1) %> 
		</span>



		<span id='Attend'>
		<img src="http://www.clker.com/cliparts/P/L/S/h/3/O/small-green-check-mark-th.png">
		</span>

	</div>


	<div style='float:left; width: 40%' class="profile">

		<h1> <strong><%= current_user.first_name + ' ' + current_user.last_name %></strong> </h1>
		<p> <strong>Events you are planning to attend: </strong></p>
		<div id='attendanceContainer'>
			<ul id="atten">
				<% current_user.attended_events.each do |item| %>
				<li> <%= item.name %> <a href= "/attendances/<%=(Attendance.find_by(params[{user_id: current_user.id, event_id: item.id}])).id%>"  data-method="delete"> 

				Delete</a> </li> 

				<% end %>
			</ul>

	</div>		


 </div>


</body>